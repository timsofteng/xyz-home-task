root = true

[*]
charset = utf-8

[*.{go}]
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile]
indent_size = 2
indent_style = tab

[*.{js,ts,tsx}]
insert_final_newline = true
end_of_line = lf
indent_style = space
indent_size = 2
max_line_length = 80
trim_trailing_whitespace = true
